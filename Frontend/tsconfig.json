{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
        "dom",
        "es2015"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "target": "es5",
      "skipLibCheck": true,
      "stripInternal": true,
      "noImplicitAny": false,
      "types": [
        "meteor-typings",
        "@types/underscore"
      ]
    },
    "include": [
      "client/**/*.ts",
      "server/**/*.ts",
      "imports/**/*.ts",
      "tests/**/*.ts",    
      "client/**/*.tsx",
      "server/**/*.tsx",
      "imports/**/*.tsx",
      "tests/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ],
    "compileOnSave": false,
    "atom": {
      "rewriteTsconfig": false
    }
  }
